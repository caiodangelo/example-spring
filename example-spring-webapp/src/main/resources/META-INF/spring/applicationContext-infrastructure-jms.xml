<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:amq="http://activemq.apache.org/schema/core"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd  
	http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

	<amq:broker useJmx="false" persistent="false">
		<amq:transportConnectors>
			<amq:transportConnector uri="tcp://localhost:0" />
		</amq:transportConnectors>
	</amq:broker>

	<amq:connectionFactory id="jmsConnectionFactory" brokerURL="vm://localhost" />

	<amq:queue id="exampleDestination" physicalName="example.queue" />

	<bean id="abstractJmsTemplate" class="org.springframework.jms.core.JmsTemplate" abstract="true">
		<constructor-arg ref="jmsConnectionFactory" />
		<property name="sessionTransacted" value="true" />
	</bean>

	<bean id="abstractJmsListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer"
		abstract="true">
		<property name="connectionFactory" ref="jmsConnectionFactory" />
		<property name="cacheLevelName" value="CACHE_NONE" />
		<property name="sessionTransacted" value="true" />
	</bean>
</beans>
